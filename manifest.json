{
  "name": "CHANGE THIS : Extension boilerplate",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension was created with the awesome extensionizr.com",
  "homepage_url": "http://extensionizr.com",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options/index.html",
  "permissions": [
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "tabs",
    "http://auctions.search.yahoo.co.jp/"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://auctions.search.yahoo.co.jp/*",
        "http://auctions.yahoo.co.jp/*",
        "http://*.auctions.seaerch.yahoo.co.jp/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "http://auctions.search.yahoo.co.jp/*",
        "http://auctions.yahoo.co.jp/*",
        "http://*.auctions.seaerch.yahoo.co.jp/*"
      ],
      "js": [
        "js/jquery/jquery.js",
        "src/inject/inject.js"
      ]
    }
  ]
}